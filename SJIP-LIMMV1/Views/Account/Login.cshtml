@using SJIP_LIMMV1.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}
@{ string maxwidthstyle = "max-width:none;";}
<h2>@ViewBag.Title</h2>
<h4 style="padding:10px 0px 10px 0px;">Dear LIMM user, please log in.</h4>
<hr style="padding-bottom:15px;" />
<style>
    div.form-group{
        margin-left:0px !important;
    }
</style>
<div class="row">
    <section id="loginForm">
        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
                <div class="col-md-8 col-8-mobile">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-md-8 col-8-mobile">
                    <div class="row">
                        <div class="col-md-2 col-2-mobile">
                            @Html.LabelFor(m => m.UserName, new { @class = "control-label", @style = maxwidthstyle })
                        </div>
                        <div class="col-md-6 col-6-mobile">
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @style = maxwidthstyle })
                            @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="form-group col-md-8 col-8-mobile">
                    <div class="row">
                        <div class="col-md-2 col-2-mobile">
                            @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                        </div>
                        <div class="col-md-6 col-6-mobile">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @style = maxwidthstyle })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="form-group col-md-8 col-8-mobile">
                    <div class="row">
                        <div class="checkbox">
                            <div class="text-right col-md-8 col-8-mobile">
                                @Html.CheckBoxFor(m => m.RememberMe)
                                @Html.LabelFor(m => m.RememberMe)
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group col-md-8 col-8-mobile">
                    <div class="row">
                        <div class="text-right col-md-8 col-8-mobile">
                            <input type="submit" value="Log in" class="btn btn-default" style=@maxwidthstyle />
                        </div>
                    </div>
                    <div class="text-right col-md-8 col-8-mobile" style="padding-top:25px;">
                        @Html.ActionLink("Forgot your password?", "ForgotPassword")
                        <span style="padding-left:40px;"></span>
                        @Html.ActionLink("Register as a new user", "Register")
                    </div>
                </div>
         }
    </section>
