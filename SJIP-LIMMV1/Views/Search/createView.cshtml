@using SJIP_LIMMV1.Models
@model  SJIP_LIMMV1.Models.SearchViewModel
@{
    ViewBag.Title = "createView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}





<body>
    <div class="container body-content">




        <div class="container">



            <div class="row justify-content-start" style="padding-top:10px;">
                <h1>Search Info</h1>
            </div>


            <div class="col-sm-12">

                <div class="col-sm-6" style="padding-top:10px;">

                    <div class="col-sm-12">

                        <div class="col-sm-3" style="padding-top:15px;">
                            @Html.LabelFor(x => x.TownCouncil)
                        </div>
                        <div class="col-sm-9" id="townCouncil" style="padding-top:5px;">
                            @Html.TextBoxFor(x => x.TownCouncil)
                        </div>
                        @Html.ValidationMessageFor(x => x.TownCouncil)
                    </div>

                    <div class="col-sm-12">

                        <div class="col-sm-3" style="padding-top:15px;">
                            @Html.LabelFor(x => x.Block)
                        </div>
                        <div class="col-sm-9" id="block" style="padding-top:5px;">
                            @Html.TextBoxFor(x => x.Block)
                            @Html.ValidationMessageFor(x => x.Block)
                        </div>
                    </div>


                </div>

                <div class="col-sm-6" style="padding-top:10px;">

                    <div class="col-sm-12">

                        <div class="col-sm-3" style="padding-top:15px;">
                            @Html.LabelFor(x => x.SIMCard)
                        </div>
                        <div class="col-sm-9" style="padding-top:5px;">
                            @Html.TextBoxFor(x => x.SIMCard)
                        </div>
                    </div>

                    <div class="col-sm-12">
                        <div class="col-sm-3" style="padding-top:15px;">
                            @Html.LabelFor(x => x.LMPD)
                        </div>
                        <div class="col-sm-9" style="padding-top:5px;">
                            @Html.TextBoxFor(x => x.LMPD)
                        </div>
                    </div>

                </div>

            </div>

            <div class="col-sm-12">
                <div style="padding-top:10px;padding-bottom:10px; ">
                    <button style="height:25px;width:60px" id="SearchBtn">Search</button>
                </div>
            </div>


            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Town Council</th>
                        <th>Block</th>
                        <th>SIM Card</th>
                        <th>LMPD</th>
                    </tr>
                </thead>
                <tbody id="SearchDetails">

                    @foreach (SensorBoxInfo item in Model.SensorBoxInfoResults)
                    {
                        <tr>
                            <td>@item.TownCouncil </td>
                            <td>@item.BlockNo </td>
                            <td>@item.SIMCard</td>
                            <td>@item.LMPD</td>
                        </tr>

                    }
                </tbody>

            </table>

        </div>


    </div>
</body>

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script>
    $(document).ready(function () {
        $("#SearchBtn").click(function () {

            var searchViewModel = {};
            searchViewModel.Block=$("#Block").val();
            searchViewModel.TownCouncil=$("#TownCouncil").val();
            searchViewModel.SIMCard=$("#SIMCard").val();
            searchViewModel.LMPD = $("#LMPD").val();
            searchViewModel.SensorBoxInfoResults = [];


            var setData = $("#SearchDetails");
            setData.html("");
            $.ajax({
                type: "POST",
                url: "/Search/submitSearch",
                dataType: "json",
                contentType: "application/json;",
                data: JSON.stringify(searchViewModel),
                error: function (xhr, status) {
                    alert(status);
                },
                success: function (result) {
                    if (result.length == 0) {
                        setData.append("<tr><td>no data</td></tr>")
                    }
                    else {
                        $.each(result, function (index, value) {
                            var Data = "<tr>" +
                                "<td>" + value.TownCouncil + "</td>" +
                                "<td>" + value.BlockNo + "</td>" +
                                "<td>" + value.SIMCard + "</td>" +
                                "<td>" + value.LMPD + "</td>" +
                                "</tr>";
                            setData.append(Data);
                        });
                    }

                }
            });

        });
    });
</script>