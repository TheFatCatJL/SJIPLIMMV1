@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using SJIP_LIMMV1.Models
@model ContactFormViewModel

    <div class="modal-header">
        <h2>@ViewBag.Title</h2>
        <p>
            <span style="white-space: pre-line">@ViewBag.Message</span>
        </p>
    </div>

    @using (Html.BeginForm("Contact", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        Html.AntiForgeryToken();
    <div class="row col-md-8 col-xs-8">
        <div class="col-md-8 col-xs-8">
            @Html.ValidationSummary("", new { @class = "text-danger" })
        </div>
        <div class="col-md-8 col-xs-8">
            @Html.LabelFor(m => m.Name, new { @class = "control-label" })
            @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = Model.Name } })
        </div>
        <div class="col-md-8 col-xs-8">
            @Html.LabelFor(m => m.Email, new { @class = "control-label" })
            @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control", @placeholder = Model.Email } })
        </div>
        <div class="col-md-8 col-xs-8">
            @Html.LabelFor(m => m.Message, new { @class = "control-label" })
            @Html.TextAreaFor(m => m.Message, new { @class = "form-control", @placeholder = "Message", @style = "height:180px;" })
        </div>
        <div class="text-right col-md-8 col-xs-8" style="padding-top:25px;">
            <input type="submit" value="Send Message" />
        </div>
    </div>
    }

