@model SJIP_LIMMV1.Models.BoxInfoViewModel

@{
    Layout = null;
}

<div>
    <style>
        div.row {
            padding: 10px 0px 10px 0px;
        }
    </style>
    @using (Html.BeginForm("EditBoxAjax", "BoxInfo", null, FormMethod.Post, new { @id = "myEditBox", @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken();
        <div class="form-group">
            <div class="row">
                <div class="col-3">
                    @Html.HiddenFor(m => m.id)
                    @Html.LabelFor(m => m.lmpdnum, new { @class = "control-label" })
                </div>
                <div class="col-9">
                    @Html.EditorFor(m => m.lmpdnum, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.lmpdnum, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="col-3">
                    @Html.LabelFor(m => m.simnum, new { @class = "control-label" })
                </div>
                <div class="col-9">
                    @Html.EditorFor(m => m.simnum, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.simnum, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="col-3">
                    @Html.LabelFor(m => m.telcolist, new { @class = "control-label" })
                </div>
                <div class="col-9">
                    @{ var selectTelco = Model.telcolist.Select(s => new SelectListItem { Value = s, Text = s }).ToList(); }
                    @Html.DropDownListFor(m => m.telco, selectTelco, new { @class = "form-control" })
                </div>
            </div>
            <div class="row">
                <div class="col-3">
                    @Html.LabelFor(m => m.jsonlist, new { @class = "control-label" })
                </div>
                <div class="col-9">
                    @{ var selectJSONID = Model.jsonlist.Select(s => new SelectListItem { Value = s, Text = s }).ToList(); }
                    @Html.DropDownListFor(m => m.jsonid, selectJSONID, new { @class = "form-control" })
                </div>
            </div>
            <div class="row">
                <div class="col-3">
                    @Html.LabelFor(m => m.status, new { @class = "control-label" })
                </div>
                <div class="col-9">
                    @{ var selectStatus = Model.statuslist.Select(s => new SelectListItem { Value = s, Text = s }).ToList(); }
                    @Html.DropDownListFor(m => m.status, selectStatus, new { @class = "form-control" })
                </div>
            </div>
            <div class="row">
                <div class="col-3">
                    @Html.LabelFor(m => m.history, new { @class = "control-label" })
                </div>
                <div class="col-9">
                    @Html.TextAreaFor(m => m.history, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.simnum, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    }
    @Scripts.Render("~/bundles/mvcgrid")
    @Styles.Render("~/Content/cssgrid")
</div>

